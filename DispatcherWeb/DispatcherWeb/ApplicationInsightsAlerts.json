{
  "alerts": [
    {
      "name": "Thread Pool Exhaustion Alert",
      "description": "Alert when thread pool utilization exceeds 90%",
      "metric": "ThreadPool_WorkerThreadUtilization",
      "threshold": 90,
      "operator": "GreaterThan",
      "severity": "Critical",
      "action": "Email notification",
      "frequency": "5 minutes"
    },
    {
      "name": "Slow Request Alert",
      "description": "Alert when requests take longer than 5 seconds",
      "metric": "SlowRequest_Duration",
      "threshold": 5000,
      "operator": "GreaterThan",
      "severity": "Warning",
      "action": "Email notification",
      "frequency": "1 minute"
    },
    {
      "name": "High Thread Pool Utilization Alert",
      "description": "Alert when thread pool utilization exceeds 80%",
      "metric": "ThreadPool_WorkerThreadUtilization",
      "threshold": 80,
      "operator": "GreaterThan",
      "severity": "Warning",
      "action": "Email notification",
      "frequency": "5 minutes"
    },
    {
      "name": "Request Error Rate Alert",
      "description": "Alert when request error rate exceeds 5%",
      "metric": "Request_Error_Duration",
      "threshold": 5,
      "operator": "GreaterThan",
      "severity": "Warning",
      "action": "Email notification",
      "frequency": "5 minutes"
    },
    {
      "name": "Database Connection Pool Alert",
      "description": "Alert when database connection pool utilization is high",
      "metric": "Database_MaxPoolSize",
      "threshold": 80,
      "operator": "GreaterThan",
      "severity": "Warning",
      "action": "Email notification",
      "frequency": "5 minutes"
    }
  ],
  "dashboards": [
    {
      "name": "Performance Monitoring Dashboard",
      "description": "Real-time performance monitoring dashboard",
      "metrics": [
        "ThreadPool_WorkerThreadUtilization",
        "ThreadPool_CompletionPortUtilization",
        "Request_Duration",
        "SlowRequest_Duration",
        "Request_Error_Duration",
        "SetOrderLineIsComplete_Duration",
        "Account_Login_Success_Duration"
      ],
      "refreshInterval": "30 seconds"
    }
  ],
  "monitoringInstructions": [
    "1. Set up the alerts in Application Insights",
    "2. Create the performance monitoring dashboard",
    "3. Monitor for 24-48 hours to establish baseline",
    "4. Look for patterns in thread pool utilization",
    "5. Identify slow requests and their causes",
    "6. Monitor database connection pool health",
    "7. Track tenant-specific performance issues"
  ]
} 