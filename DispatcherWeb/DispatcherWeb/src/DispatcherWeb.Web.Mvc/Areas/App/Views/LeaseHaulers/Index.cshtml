@using DispatcherWeb.Web.Areas.App.Startup
@using DispatcherWeb.Features
@using DispatcherWeb.Authorization
@{
    ViewBag.CurrentPageName = AppPageNames.Tenant.LeaseHaulers;
}

@section Scripts{
    <environment names="Development">
        <script src="~/view-resources/Areas/app/Views/LeaseHaulers/_CreateOrEditLeaseHaulerModal.js" asp-append-version="true"></script>
        <script src="~/view-resources/Areas/app/Views/LeaseHaulers/_CreateOrEditLeaseHaulerContactModal.js" asp-append-version="true"></script>
        <script src="~/view-resources/Areas/app/Views/LeaseHaulers/Index.js" asp-append-version="true"></script>
    </environment>

    <environment names="Staging,Production">
        <script src="~/view-resources/Areas/app/Views/LeaseHaulers/_CreateOrEditLeaseHaulerModal.min.js" asp-append-version="true"></script>
        <script src="~/view-resources/Areas/app/Views/LeaseHaulers/_CreateOrEditLeaseHaulerContactModal.min.js" asp-append-version="true"></script>
        <script src="~/view-resources/Areas/app/Views/LeaseHaulers/Index.min.js" asp-append-version="true"></script>
    </environment>

}

<div class="m-subheader ">
    <div class="row align-items-center">
        <div class="mr-auto col-sm-12 col-md-6">
            <h3 class="m-subheader__title m-subheader__title--separator">
                <span>@L("LeaseHaulersHeader")</span>
            </h3>
            <span class="m-section__sub">
                @L("LeaseHaulersHeaderInfo")
            </span>
        </div>
        <div class="col-sm-12 col-md-6 text-right">
            @if (await FeatureChecker.IsEnabledAsync(AppFeatures.FulcrumIntegration) && await PermissionChecker.IsGrantedAsync(AppPermissions.Pages_LeaseHaulers_SyncWithFulcrum))
            {
                <button type="button" id="SyncWithFulcrumButton" class="btn btn-primary"><i class="fas fa-sync"></i>@L("SyncWithFulcrum")</button>
            }
            <button id="ExportLeaseHaulersToCsvButton" class="btn btn-primary"> Export</button>
            <button id="CreateNewLeaseHaulerButton" class="btn btn-primary"><i class="fa fa-plus"></i> @L("AddNew")</button>
        </div>
    </div>
</div>
<div class="m-content">
    <div class="m-portlet m-portlet--mobile">
        <div class="m-portlet__body">
            <form>
                <div class="m-form m-form--label-align-right">
                    <div class="row m--margin-bottom-10">
                        <div class="form-group col-lg-3 col-md-3 col-sm-6">
                            <label class="control-label" for="NameFilter">@L("Name")</label>
                            <input class="form-control filter" id="NameFilter" name="Name" placeholder="Search..." type="text">
                        </div>
                        <div class="form-group col-lg-3 col-md-3 col-sm-6">
                            <label class="control-label" for="StatusFilter">@L("Status")</label>
                            <select class="form-control filter" name="Status" id="StatusFilter" asp-items="Html.GetEnumSelectList<FilterActiveStatus>(FilterActiveStatus.Active)"></select>
                        </div>
                        <div class="form-group col-lg-3 col-md-3 col-sm-6 AdvacedAuditFiltersArea" abp-hidden>
                            <label class="control-label" for="CityFilter">@L("City")</label>
                            <input class="form-control filter" id="CityFilter" name="City" placeholder="Search..." type="text">
                        </div>
                        <div class="form-group col-lg-3 col-md-3 col-sm-6 AdvacedAuditFiltersArea" abp-hidden>
                            <label class="control-label" for="StateFilter">@L("State")</label>
                            <input class="form-control filter" id="StateFilter" name="State" placeholder="Search..." type="text">
                        </div>
                    </div>
                    <div class="row m--margin-bottom-10">
                        <div class="col-lg-3">
                            <span id="ShowAdvancedFiltersSpan" class="clickable-item text-muted"><i class="fa fa-angle-down"></i> Show Advanced Filters</span>
                            <span id="HideAdvancedFiltersSpan" class="clickable-item text-muted" abp-hidden><i class="fa fa-angle-up"></i> Hide Advanced Filters</span>
                        </div>
                        <div class="col-lg-9 text-center text-md-right m--margin-top-20">
                            <button type="submit" id="SearchButton" class="btn btn-primary btn-brand m-btn m-btn--icon">
                                <span><i class="fa fa-search"></i> <span>@L("Search")</span></span>
                            </button>
                            &nbsp;&nbsp;
                            <button type="button" id="ClearSearchButton" class="btn btn-secondary m-btn m-btn--icon">
                                <span><i class="fa fa-times"></i> <span>@L("Clear")</span></span>
                            </button>

                        </div>
                    </div>
                </div>
            </form>
            <div class="m-separator m-separator--md m-separator--dashed"></div>
            <div class="row align-items-center">
                <table class="table table-striped table-bordered table-hover dt-responsive" id="LeaseHaulersTable"></table>
            </div>
        </div>
    </div>
</div>

