@using DispatcherWeb.Web.Areas.App.Startup
@using DispatcherWeb.Web.TagHelpers
@using Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewBag.CurrentPageName = AppPageNames.Tenant.LeaseHaulerPerformance;
}

@section Scripts {
    <script abp-src="/view-resources/Areas/App/Views/LeaseHaulerPerformance/Index.js" asp-append-version="true"></script>
}

<div class="m-subheader">
    <div class="row align-items-center">
        <div class="mr-auto col-6">
            <h3 class="m-subheader__title m-subheader__title--separator">
                <span>@L("LeaseHaulerPerformance")</span>
            </h3>
            <span class="m-section__sub">
            </span>
        </div>
        <div class="col-6 text-right">
        </div>
    </div>
</div>


<div class="m-content">
    <div class="m-portlet m-portlet--mobile">
        <div class="m-portlet__body">
            <form class="m-form m-form--label-align-right" novalidate id="LeaseHaulerPerformanceFilterForm">
                <div class="row m--margin-bottom-10">
                    <div class="form-group col-xl-3">
                        <label class="control-label" for="DateRangeFilter">@L("DeliveryDate")</label>
                        <input class="form-control m-input filter" id="DateRangeFilter" name="DateRangeFilter" placeholder="@L("SearchWithThreeDot")" type="text" autocomplete="off">
                    </div>
                </div>
                <div class="row m--margin-bottom-10">
                    <div class="col-xl-12 text-right margin-top-20">
                        <button type="submit" id="SearchButton" class="btn btn-primary">
                            <i class="fa fa-search"></i> @L("Search")
                        </button>
                        <button type="button" id="ClearSearchButton" class="btn btn-default">
                            <i class="fa fa-times"></i> @L("Clear")
                        </button>
                    </div>
                </div>
            </form>
            <div class="m-separator m-separator--md m-separator--dashed"></div>
            <div class="row align-items-center">
                <table id="LeaseHaulerPerformanceTable" class="display table table-striped table-bordered table-hover dt-responsive"></table>
            </div>
        </div>
    </div>
</div>
