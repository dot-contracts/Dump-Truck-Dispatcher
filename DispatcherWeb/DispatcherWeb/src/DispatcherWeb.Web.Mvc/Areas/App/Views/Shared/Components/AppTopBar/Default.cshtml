@using Abp.MultiTenancy
@using DispatcherWeb.Features
@using DispatcherWeb.Web.Areas.App.Models.Layout
@using DispatcherWeb.Configuration
@using DispatcherWeb.Authorization
@model HeaderViewModel
@{
    Layout = null;
    var isChatEnabled = await AbpSession.GetMultiTenancySideAsync() == MultiTenancySides.Host || await FeatureChecker.IsEnabledAsync(AppFeatures.ChatFeature);
    var profilePicture = @Model.GetProfilePictureUrl(ApplicationPath);
    var supportRequestLink = await SettingManager.GetSettingValueAsync(AppSettings.HostManagement.SupportRequestLink);
}

<div id="m_header_topbar" class="m-topbar  m-stack m-stack--ver m-stack--general">
    <nav class="m-stack__item m-topbar__nav-wrapper"
         aria-label="@L("TopMenu")">
        <ul class="m-topbar__nav m-nav m-nav--inline"
            aria-label="@L("TopMenu")"
            role="menubar">
            @*@if (Model.Languages.Count > 1)
            {
                <li class="m-nav__item m-dropdown m-dropdown--large m-dropdown--arrow m-dropdown--align-center m-dropdown--mobile-full-width m-dropdown--skin-light m-list-search m-list-search--skin-light dropdown-language"
                    aria-haspopup="true">
                    <a class="m-nav__link m-dropdown__toggle" data-toggle="dropdown" data-close-others="true"
                       role="menuitem"
                       aria-haspopup="true"
                       aria-expanded="false"
                       tabindex="-1">
                        <span class="m-nav__link-text">
                            <i class="@Model.CurrentLanguage.Icon" aria-label="@Model.CurrentLanguage.Icon"></i>
                            <span class="m-menu__link-text langname">
