@using DispatcherWeb.Authorization;
@using DispatcherWeb.Web.Areas.App.Models.Layout
@using DispatcherWeb.Web.Areas.App.Views.Shared.Components.AppMenu

@model MenuViewModel
<nav id="m_ver_menu"
     aria-label="@L("LeftMenu")"
     class="m-aside-menu  
            m-aside-menu--skin-light 
            m-aside-menu--submenu-skin-light"
     m-menu-vertical="1"
     m-menu-scrollable="1"
     m-menu-dropdown-timeout="500">
    @if (await IsGrantedAsync(AppPermissions.Pages_Orders_Edit)
        || await IsGrantedAsync(AppPermissions.Pages_Quotes_Edit)
        //|| await IsGrantedAsync(AppPermissions.Pages_DriverMessages) 
        //|| await IsGrantedAsync(AppPermissions.Pages_LeaseHauler)
        //|| await IsGrantedAsync(AppPermissions.Pages_Trucks)
        //|| await IsGrantedAsync(AppPermissions.Pages_Customers)
        //|| await IsGrantedAsync(AppPermissions.Pages.Items)
        //|| await IsGrantedAsync(AppPermissions.Pages_Drivers)
        //|| await IsGrantedAsync(AppPermissions.Pages_Locations)
        //|| await IsGrantedAsync(AppPermissions.Pages_Administration_Users_Create)
    )
    {
        <div class="common-add-button-group dropdown">
            <button class="btn btn-primary" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                <i class="fa fa-plus"></i>
                <span class="pl-1">@L("ADD")</span>
            </button>
            <div class="dropdown-menu">
                @if (await IsGrantedAsync(AppPermissions.Pages_Orders_Edit))
                {
                    <a class="dropdown-item" href="#" id="CommonAddOrderButton">@L("GlobalAddOrder")</a>
                    <a class="dropdown-item" href="#" id="CommonAddJobButton">@L("GlobalAddJob")</a>
                }
                @if (await IsGrantedAsync(AppPermissions.Pages_Quotes_Edit))
                {
                    <a class="dropdown-item" href="#" id="CommonAddQuoteButton">@L("GlobalAddQuote")</a>
                }
                @*@if (await IsGrantedAsync(AppPermissions.Pages_DriverMessages))
                {
                    <a class="dropdown-item" href="#" id="CommonAddDriverMessageButton">@L("GlobalAddMessage")</a>
                }
                @if (await IsGrantedAsync(AppPermissions.Pages_LeaseHauler))
                {
                    <a class="dropdown-item" href="#" id="CommonAddLeaseHaulerButton">@L("GlobalAddLeaseHauler")</a>
                }
                @if (await IsGrantedAsync(AppPermissions.Pages_Trucks))
                {
                    <a class="dropdown-item" href="#" id="CommonAddTruckButton">@L("GlobalAddTruck")</a>
                }
                @if (await IsGrantedAsync(AppPermissions.Pages_Customers))
                {
                    <a class="dropdown-item" href="#" id="CommonAddCustomerButton">@L("GlobalAddCustomer")</a>
                }
                @if (await IsGrantedAsync(AppPermissions.Pages.Items))
                {
                    <a class="dropdown-item" href="#" id="CommonAddServiceButton">@L("GlobalAddProductOrService")</a>
                }
                @if (await IsGrantedAsync(AppPermissions.Pages_Drivers))
                {
                    <a class="dropdown-item" href="#" id="CommonAddDriverButton">@L("GlobalAddDriver")</a>
                }
                @if (await IsGrantedAsync(AppPermissions.Pages_Locations))
                {
                    <a class="dropdown-item" href="#" id="CommonAddLocationButton">@L("GlobalAddLocation")</a>
                }
                @if (await IsGrantedAsync(AppPermissions.Pages_Administration_Users_Create))
                {
                    <a class="dropdown-item" href="#" id="CommonAddUserButton">@L("GlobalAddUser")</a>
                }*@
            </div>
        </div>
    }
    <ul class="m-menu__nav m-menu__nav--dropdown-submenu-arrow" 
        role="menubar" 
        aria-label="@L("LeftMenu")">
        @for (var i = 0; i < Model.Menu.Items.Count; i++)
        {
            var menuItem = Model.Menu.Items[i];
            @await Html.PartialAsync("Components/AppMenu/_UserMenuItem", new UserMenuItemViewModel
            {
                MenuItem = menuItem,
                MenuItemIndex = i,
                RootLevel = true,
                CurrentPageName = Model.CurrentPageName,
            })
        }
    </ul>
</nav>
